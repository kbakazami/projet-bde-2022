{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center h-full">

        <h1 class="relative pl-44 flex items-center pt-12 pb-16
            before:absolute before:w-40 before:h-0.5 before:top-1/2 before:left-0
            before:bg-gradient-to-r before:from-blue before:via-purple before:to-pink h1Gradiant">
            <span class="h1Gradiant">Inscription</span>
        </h1>

        <section class="form-wrapper pb-28">
            <div class="form-container">
                <form action='/register' method='POST'
                      class="relative w-full flex flex-col justify-center text-center bg-black py-7 sm:py-10 px-5 sm:px-15 rounded mx-auto form-front">
                    {{ field("nom", "Nom","Nom") }}
                    {{ field("prenom", "Prénom","Prénom") }}
                    {{ field("mail", "Email","Email") }}
                    {{ field("date", "Date de naissance","" ,"", {type: 'date'}) }}
                    {{ field("password", "Mot de passe","Mot de passe",'',  {type: "password"}) }}
                    {{ field("confirmPassword", "Confirmation du mot de passe","Confirmation du mot de passe","", {type: "password"}) }}
                    <section class="submit-wrapper">
                        <p class="submit-container">
                            <button class="submit-container-black before:left-2">
                                <input type='submit' class="relative submit-front flex uppercase py-0.5 sm:py-2 lg:px-12" value="S'inscrire"/>
                            </button>
                        </p>
                    </section>
                </form>
            </div>
        </section>
    </div>

{% endblock %}

