{% extends 'base.html.twig' %}

{% block body %}
	<div class="flex flex-col items-center h-full">

		<div class="relative flex flex-row items-center space-x-4 pt-12 pb-16">
			<div class="relative">
{#				<div class="absolute bg-white w-40 p-px ml-1 opacity-60"></div>#}
				<div class="relative borderGradiantEffect w-40 opacity-90 mt-px pt-1 mr-1"></div>
			</div>
{#			<h1 class="absolute top-12 right-px">Connexion</h1>#}
			<h1 class="h1Gradiant">Connexion</h1>
		</div>

		<span class="mb-4 tex-center text-lg italic text-red">{{ message }}</span>
		<div class="form-wrapper pb-28">
			<div class="form-container">
				<form action='/login' method='POST'
					  class="form-front relative w-full flex flex-col justify-center text-center bg-black py-7 sm:py-20 px-10 sm:px-15 rounded mx-auto">
					{{ field("mail", "Email", "Adresse Email") }}
					{{ field("password", "Password"," Mot de passe","",  {type: 'password'}) }}
					<div class="submit-wrapper">
						<div class="submit-container">
						<div class="submit-container2">
						<div class="submit-container-black">
							<input type='submit' class="relative submit-front flex uppercase py-0.5 sm:py-2 lg:px-12" value="Connexion"/>
						</div>
						</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}

