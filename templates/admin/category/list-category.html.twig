{% extends 'base.html.twig' %}

    {% block body %}
        {#    {% if message %}#}
        {{ message }}
        {#    {% endif %}#}
        <div class="flex flex-col">
            <div class="pt-4 pb-8 pl-9 flex flex-row text-sm space-x-2">
                <a href="/admin/list-event" class="button-left">Evenements</a>
                <a href="/admin/list-category" class="button-left">Catégories</a>
                <a href="/admin/list-news" class="button-left">Actualités</a>
                <a href="/admin/list-user" class="button-left">Utilisateurs</a>
                <a href="/admin/list-role" class="button-left">Rôles</a>
            </div>
            <div class="w-full">
                <div class="w-full text-center">
                    <h1 class="text-5xl normal-case">Catégories</h1>
                </div>
                <div class="flex flex-row justify-between items-center px-9 py-16">
                    <div class="flex flex-row items-center space-x-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            <defs>
                                <linearGradient id="gradiant" x1="0%" y1="0%" x2="0%" y2="100%">
                                    <stop offset="0%" style="stop-color:rgb(255,10,108);stop-opacity:1" />
                                    <stop offset="100%" style="stop-color:rgb(45,39,255);stop-opacity:1" />
                                </linearGradient>
                            </defs>
                        </svg>
                        <input type="search" id="search" class="h-4">
                    </div>
                    <a href="/admin/form-create-category" class="button-add">Ajouter une catégorie</a>
                </div>
                <table class="min-w-full border-collapse block lg:table">
                    <thead class="block lg:table-header-group">
                    <tr class="block lg:table-row absolute -top-full lg:top-auto -left-full lg:left-auto lg:relative border-b border-white uppercase">
                        <td class="pl-28 py-2 text-left block lg:table-cell"><input type="checkbox"/></td>
                        <td class="py-2 text-left block lg:table-cell">Nom</td>
                        <td class="py-2 text-center block lg:table-cell">Couleur</td>
                        <td class="pr-28 py-2 w-1/3 text-center block lg:table-cell">Action</td>
                    </tr>
                    </thead>
                    <tbody class="block lg:table-row-group">
                    {% for category in category %}
                        <tr class="block lg:table-row border-b border-white">
                            <td class="pl-28 py-2 text-left block lg:table-cell"><input type="checkbox"/></td>
                            <td class="py-2 text-left block lg:table-cell"><span class="inline-block w-1/3 lg:hidden font-bold">Nom</span><span>{{ category.title_category }}</span></td>
                            <td class="py-2 text-left block lg:table-cell"><span class="inline-block w-1/3 lg:hidden font-bold">Couleur</span><span>{{ category.color }}</span></td>
                            <td class="pr-28 py-4 text-center block lg:table-cell">
                                <span class="inline-block w-1/3 lg:hidden font-bold">Actions</span>
                                <div class="lg:flex lg:flex-col justify-center items-center space-y-2">
                                    <a href="/admin/form-edit-category/{{ category.id }}" class="button-edit">Modifier</a>
                                    <a href="/admin/delete-category/{{ category.id }}" class="button-delete">Supprimer</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

{% endblock %}
